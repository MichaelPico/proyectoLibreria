<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Usuario" table = "usuarios">
      
      <meta attribute = "class-description">
         Esta clase tiene los detalles de usuario
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "correo" column = "corre" type = "string"/>
      <property name = "saldo" column = "saldo" type = "double"/>
      <property name = "tipo" column = "tipo" type = "int"/>
      
   </class>
</hibernate-mapping>